<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="10dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="@color/grey"
        android:startColor="@color/grey"
        android:endColor="@color/grey"
        android:type="linear"
        />
    <padding
        android:left="7dp"
        android:top="3dp"
        android:right="7dp"
        android:bottom="3dp"
        />
    <size
        android:width="15dp"
        android:height="15dp"
        />
    <stroke
        android:width="0dp"
        android:color="@color/darkgrey"
        />
</shape>