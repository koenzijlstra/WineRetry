<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.koen.wineretry.BuyActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linearLayout">

        <Button
            android:text="Buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:layout_weight="1"
            android:background="@color/inbetween"
            android:textColor="@color/white"
            android:onClick="gotobuyb"
            android:textStyle="bold"/>

        <Button
            android:text="Sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/white"
            android:onClick="gotoallsellsb"/>

        <Button
            android:text="Chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/white"
            android:onClick="gotoallchatsb"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logout24"
            android:id="@+id/imageButton4"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:onClick="signout"/>

    </LinearLayout>

    <TextView
        android:text="Wines for sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:id="@+id/imageButton"
        android:background="@color/lightgrey"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginBottom="34dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/lvbottles"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_above="@+id/imageButton"
        android:paddingBottom="20dp"/>

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/rangeSeekbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_color="@color/lightgrey"
        app:bar_highlight_color="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/textViewstart"
        android:layout_alignStart="@+id/textViewstart"
        app:left_thumb_color="@color/colorPrimary"
        app:left_thumb_color_pressed="@color/colorPrimaryDark"
        app:right_thumb_color="@color/colorPrimary"
        app:right_thumb_color_pressed="@color/colorPrimaryDark"
        android:layout_below="@id/lvbottles"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/imageButton" />

    <TextView
        android:text="TextViewend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewend"
        android:layout_below="@+id/lvbottles"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton" />

    <TextView
        android:text="tvend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewstart"
        android:layout_below="@+id/lvbottles"
        android:layout_alignLeft="@+id/lvbottles"
        android:layout_alignStart="@+id/lvbottles" />

</RelativeLayout>
