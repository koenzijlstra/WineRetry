<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buyfullinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.koen.wineretry.Activities.BuyfullinfoActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvregionfull"
        android:textSize="17sp"
        android:layout_below="@+id/tvyearfull"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvstoryfull"
        android:layout_below="@+id/tvregionfull"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sellertv"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/tvstoryfull"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtitlefull"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvyearfull"
        android:textSize="17sp"
        android:layout_below="@+id/tvtitlefull"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"/>

    <Button
        android:text="Chat"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="14dp"
        android:id="@+id/button13"
        android:onClick="startchat"
        android:background="@drawable/buttonshape2"
        android:textColor="@color/white"
        android:layout_below="@+id/sellertv"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>
</RelativeLayout>
